{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "lib": [
      "esnext",
      "dom"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "local_modules",
    "*/**.d.ts"
  ]
}